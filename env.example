# Copy this file to .env.local and add your actual values

# Required: Anthropic API Key for AI functionality
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL="file:./dev.db"

# Authentication Configuration
# Generate a long, random string for production
SESSION_SECRET="your-secret-key-change-this-in-production-make-it-very-long-and-random"

# Optional: Log level for debugging
# Options: debug, info, warn, error
VITE_LOG_LEVEL=info

# Optional: Additional configuration for production deployment
NODE_ENV=production
PORT=3000
